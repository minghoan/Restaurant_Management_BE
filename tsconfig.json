{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"]
}
